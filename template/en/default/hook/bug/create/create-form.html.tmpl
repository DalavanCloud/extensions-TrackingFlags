[% IF new_tracking_flags.size %]

  [% tracking_flag_names = [] %]
  [% tflags = [] %]
  [% pflags = [] %]
  [% FOREACH flag = new_tracking_flags %]
    [% tracking_flag_names.push(flag.name) %]
    [% pflags.push(flag) IF flag.is_project %]
    [% tflags.push(flag) IF !flag.is_project %]
  [% END %]

  <script type="text/javascript">
  <!--
